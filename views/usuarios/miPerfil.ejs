<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mi Perfil</title>
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js" defer></script>
    <script src="https://use.fontawesome.com/releases/v5.13.0/js/all.js" data-auto-a11y="true"></script>
</head>
<body class="bg-gray-300 flex flex-col h-screen justify-between">
    <header class="cabecera">
        <ul class="headerul">
          <a src="logotipo" href="/views/index.ejs"> <img  src="/images/logo.png" alt="logotipo" class="logo"> </a>
          <form class="buscadorheader" action="/views/searchbar.ejs" method="get">
            <div class="form-groupSearch">
              <input type="search" class="form-control" name="search" placeholder="  Buscar" >
            </div>
          </form>
  
          <div class="uk-inline boundary botones">
            <button class="uk-button uk-button-default botonlindo" type="button">Menu</button>
              <div uk-dropdown="pos: left-top" style="position:fixed;">
                <ul class="uk-nav uk-dropdown-nav">
                    <li class="uk-active miLi"><a href="buscar.ejs">Filtros</a></li>
                    <li miLi><a "uk-button uk-button-default" href="listado.ejs" id="generos">Generos</a>
                    <li class="uk-nav-divider miLi"></li>
                </ul>
              </div>
          </div>
        </ul>
        </header>
   <div class="w-full max-w-sm bg-white rounded shadow mx-auto my-12 py-12">
        <div class="text-center w-full">
            <h1 class="pt-2 ">
                <%= username %>
            </h1>
        </div>
        <div class="pt-6 text-center w-full">
            <h2>
                <%= email %> 
            </h2>
        </div>
        <div class="pt-6 flex w-full text-center">
            <h3 class="pt-2 mx-auto w-1/2">
                <b>Birthday</b> <br>
                <%= moment(birthdate).format('Do MMM YYYY') %> 
            </h3>
            <h3 class="pt-2 mx-auto w-1/2">
                <b>Favorite Genre</b>  <br>
                <%= favorite_genre %> 
            </h3>
        </div>
   </div>
   <!-- <%- include('../reviews/myreviews.ejs') %> -->
   <footer  class="Piedepagina">
    <ul class="grupo">
      <li>
        <h2 class="nombre">Pedro Presaras</h2>
      </li>
      <li>
        <h2 class="nombre" >Alejo Gonzalez Medina</h2>
       </li>
    </ul>


  <div class="logoTmdb">
    <img src="/images/logodb.png" alt=""    href="#top" uk-scroll>
  </div>
</footer>

</body>
</html>
<style>
    .fa-star path {
      stroke: black;
      stroke-width: 50;
   }
    .modal {
      transition: opacity 0.25s ease;
    }
    body.modal-active {
      overflow-x: hidden;
      overflow-y: visible !important;
    }
</style>